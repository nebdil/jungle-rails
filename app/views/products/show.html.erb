<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <div>
        <%= form_for @product, url: [@product, :reviews], method: :post do |f| %>
          <ul>
            <%= f.fields_for :review do |e| %>
              <li>
                Your Review: <%= e.text_area :description %>
                Your Rating: <%= e.select :rating, [1, 2, 3, 4, 5]%>
              </li>
              <%= f.submit "Submit Review" %>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>

    <div class="row">
      <% @product.reviews.reverse_each do |e| %>
        <div>
          <p>
            User id: <%= e.user_id %>
          </p>
        </div>
        <div>
          <p>
            Review: <%= e.description %>
          </p>
        </div>
        <div>
          <p>
            Rating: <%= e.rating %>
          </p>
        </div>
        <% if current_user.id == e.user_id %>
          <div>
            <%= button_to('Delete', product_review_path(@product, e), method: :delete) %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div>
      Overall review: <%= @overall_review %>/5
    </div>

  </article>

</section>
