<% @productArr.each do |p| %>
<tr>
  <th>
    item: <%= p.name %>
    <br />
    <%= p.image %>
  </th>
  <th>
    description: <%= p.description %>
  </th>
</tr>
<% end %>
<% @order.line_items.product.each do |e| %>
  <% e.each do |line_item| %>
  <th>
    quantity: <%= line_item.quantity %>
  </th>
  <th>
    item price: item_price_cents: <%= line_item.item_price_cents %>
  </th>
<% end %>
<% end %>
